extends ../layout

block content
  h1 Hey #{currentUser.username} - here's where you edit a post
  form(action="/users/#{currentUser.id}/posts/#{post.id}?_method=PATCH" method="POST")
    input(type="text", name="post[title]" value="#{post.title}")
    input(type="text", name="post[body]" value="#{post.body}")
    input(type="submit", class="btn btn-sm btn-success")